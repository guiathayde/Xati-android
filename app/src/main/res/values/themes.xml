<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Xati" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_700</item>
        <item name="colorSecondaryVariant">@color/green_500</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/blue_700</item>

        <item name="buttonLoginBackground">@color/white</item>
        <item name="buttonBackground">@color/blue_500</item>

        <item name="loginBackground">@color/white_500</item>
        <item name="splashBackground">@color/blue_500</item>

        <item name="messageBackground">@color/white</item>

        <item name="modalBottomDialogBackground">@color/white</item>
        <item name="modalBottomDialogHandle">@color/blue_500</item>

        <item name="inputTextBackground">@color/white</item>
        <item name="textDescription">@color/blue_700</item>
        <item name="textLastMessage">@color/gray_100</item>
    </style>

    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/blue_500</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">@color/blue_500</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.Xati</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">#00000000</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />
    <style name="BaseBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>
    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_top_modal_bottom_dialog</item>
    </style>
</resources>